  status          Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  unit     unit?      @relation(fields: [unitId], references: [id])
  position position[]

  @@map("hrs_postinfo")
}

model position {
  id            String        @id @default(uuid())
  staffNo       String?
  postinfoId    String?
  scaleId       String?
  staffCategory staffCategory
  letterAt      DateTime
  startAt       DateTime
  endAt         DateTime
